<resources>
    <style name="BottomBarStyle">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dimens_sp_11</item>
        <item name="android:textColor">@color/ic_color_text_bottom_bar</item>
    </style>

    <style name="view_relativeasset_down_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/ui_5_dip</item>
        <item name="android:textColor">@color/relative_upshouchizhao_txt_color</item>
        <item name="android:textSize">@dimen/dimens_sp_16</item>
    </style>

    <style name="view_relativeasset_up_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ui_60_dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="view_relativeasset_line">
        <item name="android:layout_width">@dimen/ui_10_dip</item>
        <item name="android:layout_height">@dimen/ui_5_dip</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="view_relativeasset_in_lay">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 公用分享的dialog的style-->
    <style name="dialog_comment_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        透明
        <item name="android:windowBackground">@color/share_transparent_bg</item>
        窗口背景色
        <item name="android:windowContentOverlay">@null</item>
        是否有覆盖
        <item name="android:backgroundDimEnabled">false</item>
        dialog的背景是否昏暗
    </style>

    <style name="RCTheme.TextView.BottomBarStyle">
        <!-- <item name="android:background">@drawable/c_bg_selector_tabbar_btn</item>-->
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/c_selector_text_bottom_bar</item>
    </style>

    <style name="transcutestyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/half_transfer</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_5a5a5a</item>
    </style>
    <style name="hintColor" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="errorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_input_layout_err</item>
    </style>
    <style name="edit_text_style_changepsd" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- bottom menu dialog -->
    <style name="bottomMenuDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="mine_account_info_text">
        <item name="android:textSize">@dimen/dimens_sp_12</item>
        <item name="android:textColor">@color/c_high_black</item>
    </style>

    <style name="mine_account_info_value">
        <item name="android:textSize">@dimen/dimens_sp_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mine_item_desc_text">
        <item name="android:textSize">@dimen/dimens_sp_14</item>
        <item name="android:textColor">@color/color_5a5a5a</item>
        <item name="android:layout_marginTop">@dimen/dimens_sp_14</item>
        <item name="android:layout_marginBottom">@dimen/dimens_sp_14</item>
    </style>


    <style name="mine_account_info_text_image_ll">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">73dp</item>
        <item name="android:background">@color/app_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mine_account_info_text_image">
        <item name="android:textSize">@dimen/dimens_sp_12</item>
        <item name="android:color">@color/color_595959</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="mine_activites_item_title">
        <item name="android:textSize">@dimen/dimens_sp_20</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="mine_activites_item_desc_text">
        <item name="android:textSize">@dimen/dimens_sp_14</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="mine_activites_item_desc_value">
        <item name="android:textSize">@dimen/dimens_sp_14</item>
        <item name="android:color">@color/color_595959</item>
    </style>

    <style name="mine_activites_item_desc_prompt">
        <item name="android:textSize">@dimen/dimens_sp_16</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="home_banker_bt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_home_adviser_bt</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/ui_5_dip</item>
        <item name="android:paddingBottom">@dimen/ui_5_dip</item>
        <item name="android:paddingLeft">@dimen/ui_10_dip</item>
        <item name="android:paddingRight">@dimen/ui_10_dip</item>
    </style>
</resources>
