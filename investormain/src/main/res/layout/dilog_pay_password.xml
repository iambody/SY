<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_13_dip"
        android:layout_marginTop="@dimen/ui_13_dip"
        >
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/ui_15_dip"
            android:layout_centerVertical="true"
            android:textColor="#BFBFBF"
            android:text="X"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="请输入支付密码"
            android:textSize="@dimen/dimens_sp_18"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E1E6"
        />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:text="鹏华养老产业股票"
        android:textSize="@dimen/dimens_sp_16"
        android:layout_marginTop="@dimen/ui_15_dip"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:text="50000.00元"
        android:textSize="32sp"
        android:layout_marginTop="@dimen/ui_20_dip"
        android:layout_gravity="center_horizontal"
        />


    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/ev_password_input"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/ui_15_dip"
        android:layout_marginBottom="@dimen/ui_20_dip"
        android:layout_gravity="center_horizontal"
        app:gpvGridColor="@color/transparent"
        app:gpvLineColor="#A5A5A5"
        app:gpvLineWidth="1dp"
        app:gpvPasswordLength="6"
        app:gpvPasswordTransformation="*"
        app:gpvPasswordType="numberPassword"
        app:gpvTextColor="@color/black"
        app:gpvTextSize="@dimen/dimens_sp_16" />

</LinearLayout>