<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.takwolf.android.lock9.Lock9View
        android:id="@+id/lock_9_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lock9_autoLink="false"
        app:lock9_enableVibrate="true"
        app:lock9_lineColor="@color/tv_blue"
        app:lock9_lineWidth="5dp"
        app:lock9_nodeOnSrc="@drawable/gesture_node_pressed"
        app:lock9_nodeSrc="@drawable/gesture_node_normal"
        app:lock9_padding="28dp"
        app:lock9_spacing="28dp"
        app:lock9_vibrateTime="20" />

    <!--app:lock9_nodeOnAnim="@anim/node_on_2"-->
</LinearLayout>