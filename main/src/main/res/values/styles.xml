<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/BaseActionBar.MenuTextStyle</item>
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="BottomBarStyle">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_11</item>
        <item name="android:textColor">@color/ic_color_text_bottom_bar</item>
    </style>
</resources>
