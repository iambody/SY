<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_wel_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

   <ImageView
        android:id="@+id/iv_wel_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/bg_bottom_welcomenew"
         />

    <Button
        android:id="@+id/btn_wel_cancle"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_wel_btn"
        android:text="@string/wel_cancelbtn_str"
        android:textColor="#333333"
        android:textSize="18sp"
        android:visibility="gone" />
</FrameLayout>