<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="50dp" />
    <include
        layout="@layout/acitivity_divide_online"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:xTabMode="fixed"
        app:xTabIndicatorColor="@color/app_golden"
        app:xTabIndicatorHeight="4dp"
        app:xTabIndicatorWidth="30dp"
        app:xTabSelectedTextColor="@color/app_golden"
        app:xTabTextColor="#ff000000"
        app:xTabTextSize="15sp"
        app:xTabSelectedTextSize="15sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_z_dip"
        android:src="@color/gray_font" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
