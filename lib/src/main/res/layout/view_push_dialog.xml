<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_vcd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/ll_vcd"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@drawable/shape_f6f6f6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/push_dialog_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom_dialog" />

            <TextView
                android:id="@+id/tv_vcd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:paddingBottom="8dp"
                android:paddingTop="20dp"
                android:text="title"
                android:textColor="#222"
                android:textSize="@dimen/dimens_sp_20" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:fadingEdge="vertical"
                android:overScrollMode="never"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tv_vcd_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:lineSpacingExtra="5dp"
                    android:text="message"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimens_sp_14" />
            </ScrollView>

            <Button
                android:id="@+id/btn_vcd_sure"
                style="@style/btn_red_bg_style"
                android:layout_width="240dp"
                android:layout_height="44dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="чбошод"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_sp_16" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/iv_vcd_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/dialog_cancel_sel" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>