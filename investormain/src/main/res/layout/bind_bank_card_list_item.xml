<?xml version="1.0" encoding="utf-8"?>
<com.solo.library.SlideTouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mSlideTouchView"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <!-- 下层布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/ui_20_dip"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_unbind_card_info"
            android:id="@+id/unbind_card"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_bank_card_bg"
        android:paddingLeft="@dimen/ui_15_dip"
        android:paddingRight="@dimen/ui_15_dip">

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="招商银行"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_20" />

        <TextView
            android:id="@+id/bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bank_name"
            android:layout_below="@id/bank_name"
            android:layout_marginTop="1dp"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bank_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="**** **** **** 8908"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_18" />
    </RelativeLayout>
</com.solo.library.SlideTouchView>
