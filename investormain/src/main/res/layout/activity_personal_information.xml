<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar_id"
        layout="@layout/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_sp_20" />

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <RelativeLayout
                android:id="@+id/rl_personal_information_icon_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_124_dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="头像"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <com.cgbsoft.lib.widget.RoundImageView
                    android:id="@+id/civ_personal_information_icon"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="@dimen/ui_64_dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toLeftOf="@+id/iv_personalinfo_item_right_arrow_icon"
                    android:src="@drawable/logo"
                    app:civ_border_color="@color/transparent"
                    app:civ_border_width="1dp"></com.cgbsoft.lib.widget.RoundImageView>

                <ImageView
                    android:id="@+id/iv_personalinfo_item_right_arrow_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <RelativeLayout
                android:id="@+id/rl_username_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_10_dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_personal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toLeftOf="@+id/iv_personalinfo_item_right_arrow"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/dimens_sp_14" />

                <ImageView
                    android:id="@+id/iv_personalinfo_item_right_arrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <RelativeLayout
                android:id="@+id/rl_usergender_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_10_dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_personal_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toStartOf="@+id/iv_personalinfo_item_right_arrow_gender"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/dimens_sp_14" />

                <ImageView
                    android:id="@+id/iv_personalinfo_item_right_arrow_gender"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <RelativeLayout
                android:id="@+id/rl_show_datepicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_10_dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="生日"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_user_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toLeftOf="@+id/iv_personalinfo_item_right_arrow_birthday"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/dimens_sp_14" />

                <ImageView
                    android:id="@+id/iv_personalinfo_item_right_arrow_birthday"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <RelativeLayout
                android:id="@+id/rl_show_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="地区"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_address_str"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toLeftOf="@+id/iv_personalinfo_item_right_arrow_district"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dimens_sp_14" />

                <ImageView
                    android:id="@+id/iv_personalinfo_item_right_arrow_district"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_goto_member_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_10_dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/mymember"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_member_level"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:layout_toLeftOf="@+id/iv_personal_information_arrow_hy"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/dimens_sp_14" />

                <ImageView
                    android:id="@+id/iv_personal_information_arrow_hy"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/ui_15_dip" />

            <LinearLayout
                android:id="@+id/ll_my_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_personal_information_qr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ui_70_dip"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:layout_marginRight="@dimen/ui_10_dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/myqr"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_sp_16" />

                    <ImageView
                        android:layout_width="@dimen/ui_16_dip"
                        android:layout_height="@dimen/ui_16_dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ui_10_dip"
                        android:layout_toLeftOf="@+id/iv_personal_information_arrow"
                        android:scaleType="fitXY"
                        android:src="@drawable/personal_info_tip" />

                    <ImageView
                        android:id="@+id/iv_personal_information_arrow"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <include
                    layout="@layout/acitivity_divide_online"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/ui_15_dip" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cards_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/rl_personal_information_card_collect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ui_70_dip"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:layout_marginRight="@dimen/ui_10_dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/card_collect"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_sp_16" />

                    <TextView
                        android:id="@+id/tv_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/ui_10_dip"
                        android:layout_toLeftOf="@+id/iv_personal_information_arrow_card"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_595959"
                        android:textSize="@dimen/dimens_sp_14"
                        android:text=""
                        />

                    <ImageView
                        android:id="@+id/iv_personal_information_arrow_card"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <include
                    layout="@layout/acitivity_divide_online"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/ui_15_dip" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/transparent"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>