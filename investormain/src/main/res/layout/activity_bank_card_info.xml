<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/title_normal_new" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/ui_15_dip"
        android:layout_marginRight="@dimen/ui_15_dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_bank_card_bg">

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="招商银行"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_20" />

        <TextView
            android:id="@+id/bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bank_name"
            android:layout_below="@id/bank_name"
            android:layout_marginTop="1dp"
            android:text="储蓄卡"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_14" />

        <TextView
            android:id="@+id/bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bank_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="**** **** **** 8908"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_18" />
    </RelativeLayout>

</LinearLayout>