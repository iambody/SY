<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginRight="@dimen/ui_80_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/dialog_transparent22" />

        <com.cgbsoft.privatefund.widget.SemicircleView
            android:layout_width="@dimen/ui_80_dip"
            android:layout_height="@dimen/ui_80_dip"
             />
    </LinearLayout>

    <com.cgbsoft.lib.widget.RoundImageView
        android:id="@+id/main_home_vister_adviser_inf_iv"
        android:layout_width="@dimen/ui_60_dip"
        android:layout_height="@dimen/ui_60_dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_touxiang_default"
        app:border_outside_color="@color/homeblack"
        app:border_thickness="2dp" />


</RelativeLayout>