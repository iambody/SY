<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/ui_10_dip"
    android:paddingRight="@dimen/ui_10_dip">
    <!-- 第一个框 -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="70dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/recharge_up_bt1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_corner_txt"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/ui_10_dip"
            android:text="10000云豆"
            android:textColor="@drawable/select_txtcolor_gray_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recharge_up_bt1_tag"
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/ui_5_dip"
            android:layout_marginTop="7dp"
            android:background="@drawable/recharge_yd_red_cornor"
            android:gravity="center|top"
            android:paddingTop="@dimen/ui_2_dip"
            android:text="+10%"
            android:textColor="@color/white"
            android:textSize="@dimen/ui_10_dip" />
    </RelativeLayout>

    <View android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <!-- 第二个框 -->

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="70dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/recharge_up_bt2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_corner_txt"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/ui_10_dip"
            android:text="10000云豆"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recharge_up_bt2_tag"
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/ui_5_dip"
            android:layout_marginTop="7dp"
            android:background="@drawable/recharge_yd_red_cornor"
            android:gravity="center|top"
            android:paddingTop="2dp"
            android:text="+15%"
            android:textColor="@color/white"
            android:textSize="@dimen/ui_10_dip" />
    </RelativeLayout>

    <View android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <!-- 第三个框 -->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="70dp"
        android:layout_weight="1">


    <TextView
            android:id="@+id/recharge_up_bt3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shape_corner_txt"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/ui_10_dip"
            android:text="10000云豆"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recharge_up_bt3_tag"
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/ui_5_dip"
            android:layout_marginTop="7dp"
            android:background="@drawable/recharge_yd_red_cornor"
            android:gravity="center|top"
            android:paddingTop="@dimen/ui_2_dip"
            android:text="+20%"
            android:textColor="@color/white"
            android:textSize="@dimen/ui_10_dip" />
    </RelativeLayout>

</LinearLayout>