<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ui_10_dip"
    android:paddingRight="@dimen/ui_10_dip">

    <LinearLayout
        android:id="@+id/home_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_5_dip"
        android:layout_marginTop="@dimen/ui_5_dip"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/ui_10_dip">

        <TextView
            android:id="@+id/home_news_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:text="最新资讯"
            android:textColor="@color/app_golden"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrorw_right_glod" />
    </LinearLayout>

    <com.cgbsoft.lib.widget.ls.ListViewForScrollView
        android:id="@+id/home_news_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="#00000000" />

</LinearLayout>