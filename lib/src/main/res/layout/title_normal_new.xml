<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/white"
    android:paddingBottom="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <ImageView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back_black_24dp"
        android:visibility="gone"
        android:scaleType="center" />
    <ImageView
        android:id="@+id/iv_title_left"
        android:layout_width="@dimen/ui_44_dip"
        android:layout_height="@dimen/ui_44_dip"
        android:layout_centerVertical="true"
        android:padding="@dimen/ui_11_dip"
        android:src="@drawable/select_happy_life_toolbar_left"
        android:clickable="true"
        android:visibility="gone"
        android:scaleType="fitCenter" />
    <ImageView
        android:id="@+id/iv_title_right"
        android:layout_width="@dimen/ui_44_dip"
        android:layout_height="@dimen/ui_44_dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="@dimen/ui_11_dip"
        android:src="@drawable/select_happy_life_toolbar_right"
        android:visibility="gone"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/title_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/title_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:visibility="visible"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_right"
        android:background="@drawable/playlist"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

</RelativeLayout>