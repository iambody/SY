<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/video_product_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ui_10_dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_5_dip"
        android:drawablePadding="@dimen/ui_5_dip"
        android:text="@string/xiangguanchanpin"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_sp_16"
        android:textStyle="bold" />

    <ImageView style="@style/video_bottom_line" />

    <TextView
        android:id="@+id/view_videoplay_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/ui_5_dip"
        android:textColor="@color/c_mid_black"
        android:textSize="@dimen/dimens_sp_16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/ui_5_dip"
        android:src="@color/gray_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_videoplay_product_income"
            style="@style/videoplay_product_txt_style" />

        <TextView
            android:id="@+id/view_videoplay_product_day"
            style="@style/videoplay_product_txt_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_videoplay_product_allday"
            style="@style/videoplay_product_txt_style" />

        <TextView
            android:id="@+id/view_videoplay_product_edu"
            style="@style/videoplay_product_txt_style" />
    </LinearLayout>
</LinearLayout>