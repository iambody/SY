<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_new_share_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/select_comment_share_bt</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_warp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/ui_10_dip</item>

        <item name="android:textSize">@dimen/dimens_sp_16</item>
    </style>

    <style name="style_share_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/ui_10_dip</item>
        <item name="android:layout_marginLeft">@dimen/ui_20_dip</item>
        <item name="android:layout_marginRight">@dimen/ui_20_dip</item>
        <item name="android:layout_marginTop">@dimen/ui_10_dip</item>
        <item name="android:background">@drawable/selector_bg_btn_white_with_golden_boade</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/ui_10_dip</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/dimens_sp_18</item>
        <item name="android:textColor">@color/app_golden</item>
    </style>

    <style name="style_share_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/ui_10_dip</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/ui_10_dip</item>
    </style>
    <style name="style_share_item1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/ui_10_dip</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/ui_10_dip</item>
    </style>
</resources>