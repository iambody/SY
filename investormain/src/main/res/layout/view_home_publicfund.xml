<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/ui_8_dip"
    android:layout_marginRight="@dimen/ui_8_dip">

    <ImageView
        android:id="@+id/public_fund_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home_publicfund_bg" />

    <ImageView
        android:id="@+id/home_publicfund_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ui_35_dip"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_publicfund_bt" />

    <RelativeLayout
        android:id="@+id/home_public_tags_lay"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_public_tagl0"
            style="@style/style_home_public_tag"
            android:layout_marginRight="@dimen/ui_12_dip"
            android:layout_toLeftOf="@+id/home_public_tagl1"
            android:text="@string/low_risk"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_public_tagl1"
            style="@style/style_home_public_tag"
            android:layout_marginRight="@dimen/ui_8_dip"
            android:layout_toLeftOf="@+id/home_flexible"
            android:text="@string/low_risk" />

        <TextView
            android:id="@+id/home_flexible"
            style="@style/style_home_public_tag"
            android:layout_centerInParent="true"
            android:text="@string/flexible" />

        <TextView
            android:id="@+id/home_public_tagr1"
            style="@style/style_home_public_tag"
            android:layout_marginLeft="@dimen/ui_8_dip"
            android:layout_toRightOf="@id/home_flexible"
            android:text="@string/thousand_subscription" />

        <TextView
            android:id="@+id/home_public_tagr2"
            style="@style/style_home_public_tag"
            android:layout_marginLeft="@dimen/ui_12_dip"
            android:layout_toRightOf="@id/home_public_tagr1"
            android:text="@string/thousand_subscription"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/home_publicfund_up_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:clickable="true"
        android:shadowColor="#bbffffff"
        android:shadowDy="3.5"
        android:shadowRadius="1.5"
        android:textColor="@color/red_new_select1"
        android:textSize="@dimen/ui_40_dip"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/home_publicfund_down_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_publicfund_up_value"
        android:layout_centerHorizontal="true"

        android:textColor="#AD6413"
        android:textSize="@dimen/ui_15_dip" />

</RelativeLayout>