<resources>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="health_item_title">
        <item name="android:textSize">@dimen/ui_32_dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="health_item_subtitle">
        <item name="android:textSize">@dimen/ui_20_dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="health_item_detail">
        <item name="android:textSize">@dimen/dimens_sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
