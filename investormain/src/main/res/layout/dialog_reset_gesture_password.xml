<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/accuont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="当前账号："
            android:textColor="@color/c_high_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="请输入登录密码"
            android:textColor="@color/c_high_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_login_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_edit_text_btn_bg"
            android:password="true"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingTop="@dimen/ui_5_dip"
            android:paddingBottom="@dimen/ui_5_dip">

            <TextView
                android:id="@+id/tel_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="400-188-8848"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/reset_gesture_password_dialog_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_pwd"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/ui_20_dip"
                android:textSize="@dimen/dimens_sp_16"
                android:textColor="@color/c_mid_black"
                android:clickable="true"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#D1D1D1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quxiao"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_left_btn_select"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333" />

        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#D1D1D1" />

        <Button
            android:id="@+id/queren"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_right_btn_select"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white" />
        <!--android:background="@drawable/toc_cornor_btn"-->
    </LinearLayout>
</LinearLayout>
