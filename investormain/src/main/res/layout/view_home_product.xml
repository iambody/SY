            android:layout_height="187dp"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:scaleType="centerCrop"
            android:background="@drawable/public_fund_upload"/>
        <!-- 公募基金的详情布局************ -->
