<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ich_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_ich_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_ich_bg"
        android:background="@color/half_trans"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimens_sp_14" />

    <LinearLayout
        android:id="@+id/ll_ich"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/iv_ich_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tv_ich_product_train"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_college_product_train"
            android:gravity="center_horizontal"
            android:text="@string/product_training_str"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_12" />

        <TextView
            android:id="@+id/tv_ich_forefront"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_college_wealth_forefront"
            android:gravity="center_horizontal"
            android:text="@string/wealth_forefront_str"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_12" />

        <TextView
            android:id="@+id/tv_ich_manager_train"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_college_manager_training"
            android:gravity="center_horizontal"
            android:text="@string/manager_training_str"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_12" />

        <TextView
            android:id="@+id/tv_ich_wealth_knowledge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/select_college_wealth_knowledge"
            android:gravity="center_horizontal"
            android:text="@string/wealth_knowledge_str"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_12" />
    </LinearLayout>
</RelativeLayout>