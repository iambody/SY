<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_back_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_left"
        android:layout_width="@dimen/ui_44_dip"
        android:layout_height="@dimen/ui_44_dip"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="@dimen/ui_11_dip"
        android:scaleType="fitCenter"
        android:src="@drawable/select_happy_life_toolbar_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_right"
        android:layout_width="@dimen/ui_44_dip"
        android:layout_height="@dimen/ui_44_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="@dimen/ui_11_dip"
        android:scaleType="fitCenter"
        android:src="@drawable/select_happy_life_toolbar_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="3dp"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_6a6a6a"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_right_newc"
        android:layout_width="@dimen/ui_44_dip"
        android:layout_height="@dimen/ui_44_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:gravity="center"
        android:text="确定"
        android:enabled="false"
        android:textColor="@color/color_6a6a6a"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_right"
        android:background="@drawable/playlist"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_salon_city_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/salon_address_flag" />

        <TextView
            android:id="@+id/tv_salon_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京" />
    </LinearLayout>
</RelativeLayout>