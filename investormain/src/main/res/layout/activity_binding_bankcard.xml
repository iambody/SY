            <!-- 手机号**********-->

            <RelativeLayout
                android:id="@+id/rl_phonenum_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="预留手机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <EditText
                    android:id="@+id/ev_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toLeftOf="@+id/phone_number_query"
                    android:layout_toRightOf="@+id/tv_phone_number"
                    android:background="@null"
                    android:hint="该银行开户时预留手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />

                <ImageView
                    android:id="@+id/phone_number_query"
                    android:layout_width="@dimen/ui_24_dip"
                    android:layout_height="@dimen/ui_24_dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/fund_bindcard_wenhao"
                    android:layout_marginRight="@dimen/ui_5_dip"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/verification_code"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="验证码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <EditText
                    android:id="@+id/ev_verification_code_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/verification_code"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />


                <Button
                    android:id="@+id/bt_get_verification_code"
                    android:layout_width="86dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ui_15_dip"
                    android:background="@color/app_golden"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_sp_14" />

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />-->
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_15_dip"
                android:layout_marginTop="@dimen/ui_10_dip"
                android:text="手机号请填写您在该银行预留的手机号。"
                android:textColor="#595959"
                android:textSize="@dimen/dimens_sp_15"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/public_bindcard_cb_ar_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginTop="@dimen/ui_10_dip"
                android:gravity="left"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/public_bindcard_cb_ar"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/publicbuy_btn_check"
                    android:button="@null"
                    android:checked="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="您已阅读并同意"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/public_bindcard_tv_ar_proto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:clickable="true"
                    android:text="《银行转账授权协议》"
                    android:textColor="@color/app_golden"
                    android:textSize="12dp" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_Confirm"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="345dp"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/ui_100_dip"
                android:layout_marginLeft="@dimen/ui_15_dip"
                android:layout_marginRight="@dimen/ui_15_dip"
                android:layout_marginTop="@dimen/ui_30_dip"
                android:background="@drawable/public_fund_conrner_gray"
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_sp_18" />
            <!--     android:background="@drawable/bind_bankcard_button"-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>