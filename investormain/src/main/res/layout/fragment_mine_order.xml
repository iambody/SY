<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ui_10_dip"
        android:paddingRight="@dimen/ui_10_dip"
        android:gravity="center_vertical"
        android:id="@+id/account_order_goto_receive_address">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_sp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="管理收货地址"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_14"/>

    </LinearLayout>

    <include layout="@layout/acitivity_divide_online"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/ui_10_dip">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/mine_account_info_text_image_ll"
                    android:id="@+id/account_order_send_ll">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mine_account_info_text_image"
                        android:drawableTop="@drawable/icon_send"
                        android:text="@string/account_order_wait_send"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    style="@style/mine_account_info_text_image_ll"
                    android:id="@+id/account_order_receive_ll">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mine_account_info_text_image"
                        android:drawableTop="@drawable/icon_goods_receipt"
                        android:text="@string/account_order_wait_receive"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/mine_account_info_text_image_ll"
                    android:id="@+id/account_order_finished_ll">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mine_account_info_text_image"
                        android:drawableTop="@drawable/icon_complete"
                        android:text="@string/account_order_finished"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    style="@style/mine_account_info_text_image_ll"
                    android:id="@+id/account_order_sale_ll">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/mine_account_info_text_image"
                        android:drawableTop="@drawable/icon_complete"
                        android:text="@string/account_order_after_sale"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="146dp"
            android:id="@+id/account_order_all_ll"
            android:background="@color/app_bg"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mine_account_info_text_image"
                android:drawableTop="@drawable/icon_all_goods"
                android:text="@string/account_order_all"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>