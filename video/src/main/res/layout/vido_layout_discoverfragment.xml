<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/video_discover_sousou_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/message_search_flag_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/search_black"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="搜索"
                android:textColor="@color/gray_font"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/video_discover_history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/video_play_history"
            android:gravity="center"
            android:text="播放历史"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/video_discover_download_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/video_play_download"
            android:gravity="center"
            android:text="下载记录"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginRight="@dimen/ui_5_dip"/>

    </LinearLayout>

    <com.cgbsoft.lib.base.webview.BaseWebview
        android:id="@+id/video_discover_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>