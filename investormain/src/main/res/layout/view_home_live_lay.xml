<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ui_10_dip"
    android:paddingRight="@dimen/ui_10_dip"
    android:paddingTop="@dimen/ui_10_dip">

    <RelativeLayout
        android:id="@+id/view_live_iv_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_live_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_choice_ids" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:padding="@dimen/ui_5_dip">
<ImageView
    android:layout_width="@dimen/ui_1_dip"
    android:layout_height="@dimen/ui_1_dip" />
            <TextView
                android:id="@+id/view_live_title_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="观看直播"

                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ui_2_dip"
                android:layout_toRightOf="@+id/view_live_title_tag"

                android:src="@drawable/main_live_play_iv" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ui_4_dip"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="正在直播：" />

        <TextView
            android:id="@+id/view_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="@dimen/ui_4_dip"
            android:text="内容ss少时诵诗书所saaacaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasassssssss" />
    </LinearLayout>
</LinearLayout>