<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_with_layer"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ui_15_dip"
        android:paddingRight="@dimen/ui_10_dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="金融资产"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_sp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/account_bank_hide_assert"
            android:gravity="right|center_vertical"
            android:text="@string/account_bank_show_assert"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_14"/>
    </LinearLayout>

    <include layout="@layout/acitivity_divide_online"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        />

    <include layout="@layout/layout_private_share_bao"/>

    <include layout="@layout/layout_public_fund"/>

    <include layout="@layout/layout_private_fund"/>

</LinearLayout>