<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_normal_new"/>

    <include
        layout="@layout/acitivity_divide_online"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_personal_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:gravity="center"
                android:text="188888888"
                />
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:id="@+id/rl_personal_information_icon_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_100_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_10_dip"
                    android:text="头像"
                    />
                <com.cgbsoft.lib.widget.CircleImageView
                    android:id="@+id/civ_personal_information_icon"
                    android:layout_width="@dimen/ui_50_dip"
                    android:layout_height="@dimen/ui_50_dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ui_10_dip"
                    android:src="@drawable/ic_chengzhang_nor"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/black"
                    >

                </com.cgbsoft.lib.widget.CircleImageView>
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text="姓名"
                    />
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="性别"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text="性别"
                    />
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:id="@+id/rl_show_datepicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="生日"
                    />
                <TextView
                    android:id="@+id/tv_user_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text="YYYY/MM/DD"
                    />
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:id="@+id/rl_show_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="地区"
                    />

                <TextView
                    android:id="@+id/tv_address_str"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="地区"
                    />
            </RelativeLayout>

            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="我的会员"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_personal_information_arrow_hy"
                    android:layout_marginRight="@dimen/ui_5_dip"
                    android:text="我的会员"
                    />
                <ImageView
                    android:id="@+id/iv_personal_information_arrow_hy"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right"
                    />
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_44_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:layout_marginRight="@dimen/ui_10_dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="我的二维码"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/iv_personal_information_arrow"
                    android:layout_marginRight="@dimen/ui_5_dip"
                    android:text="我的二维码"
                    />
                <ImageView
                    android:id="@+id/iv_personal_information_arrow"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right"
                    />
            </RelativeLayout>
            <include
                layout="@layout/acitivity_divide_online"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/ui_10_dip"
                android:layout_marginLeft="@dimen/ui_10_dip"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>