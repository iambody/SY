<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_elegant_goods_item_all"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="270dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/ui_4_dip"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:layout_marginLeft="@dimen/ui_15_dip"
        android:layout_marginRight="@dimen/ui_15_dip"
        >
        <ImageView
            android:id="@+id/iv_recycler_goods_item"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_elegant_goods_product_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/c_high_black"
        android:textSize="@dimen/dimens_sp_14"
        android:layout_marginLeft="@dimen/ui_15_dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/ui_15_dip"
        >
        <TextView
            android:id="@+id/tv_elegant_goods_yd_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/c_high_black"
            android:textSize="@dimen/dimens_sp_16"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_elegant_goods_yd_str"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/c_high_black"
            android:layout_marginLeft="@dimen/ui_2_dip"
            android:text="云豆"
            android:textSize="@dimen/dimens_sp_14"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>