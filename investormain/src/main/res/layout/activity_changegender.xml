<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/title_bar_id"
        layout="@layout/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_male_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_70_dip"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_male"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/ui_20_dip"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_sp_16"
            android:textColor="@color/black"
            android:text="男"
            />
        <ImageView
            android:id="@+id/iv_male_flag"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/change_gender_flag"
            android:layout_marginRight="@dimen/ui_20_dip"
            android:visibility="invisible"
            />
    </LinearLayout>
    <include
        layout="@layout/acitivity_divide_online"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/ui_20_dip"
        />
    <LinearLayout
        android:id="@+id/ll_female_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_70_dip"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_female"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/ui_20_dip"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimens_sp_16"
            android:textColor="@color/black"
            android:text="女"
            />
        <ImageView
            android:id="@+id/iv_female_flag"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/change_gender_flag"
            android:layout_marginRight="@dimen/ui_20_dip"
            android:visibility="invisible"
            />
    </LinearLayout>
    <include
        layout="@layout/acitivity_divide_online"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/ui_20_dip"
        />
</LinearLayout>