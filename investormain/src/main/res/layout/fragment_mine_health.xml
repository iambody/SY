<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ui_10_dip"
        android:paddingRight="@dimen/ui_10_dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="健康"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_sp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看全部"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimens_sp_14"/>

    </LinearLayout>

    <include layout="@layout/acitivity_divide_online"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/account_health_on_bug_ll">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/dimens_sp_14"
                android:textColor="@color/color_5a5a5a"
                android:text="@string/account_health_no_bugy"
                android:gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/shape_btn_goden_boader_bg"
                android:text="@string/account_health_go_server"
                android:textColor="@color/app_golden"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/account_health_had_bug_ll"
            android:gravity="center"
            android:visibility="gone">

        </LinearLayout>
    </FrameLayout>
</LinearLayout>