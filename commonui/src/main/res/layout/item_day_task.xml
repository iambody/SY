<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <View
        android:id="@+id/view_idt"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_idt_root"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_d0d0d0"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_idt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text=""
            android:textColor="#222"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_idt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_idt_name"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="#666"
            android:text=""
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_idt"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_idt_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/task_complete" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_idt"
            android:background="@drawable/line_vertical" />
    </RelativeLayout>
</LinearLayout>