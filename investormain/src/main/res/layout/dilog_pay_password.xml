<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ios_bg"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_13_dip"
        android:layout_marginTop="@dimen/ui_13_dip"
        >
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/ui_25_dip"
            android:layout_height="@dimen/ui_25_dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/ui_15_dip"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_avd_close"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="请输入交易密码"
            android:textSize="@dimen/dimens_sp_18"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E1E6"
        />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="鹏华养老产业股票"
        android:gravity="center"
        android:ellipsize="middle"
        android:maxLines="3"
        android:lineSpacingExtra="4.5dp"
        android:textSize="@dimen/dimens_sp_16"
        android:layout_marginTop="@dimen/ui_15_dip"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="50000.00元"
        android:textSize="32sp"
        android:layout_marginTop="@dimen/ui_20_dip"
        android:layout_gravity="center"
        />


    <com.cgbsoft.privatefund.public_fund.passworddiglog.CustomPasswordView
        android:id="@+id/ev_password_input"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/ui_15_dip"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/ui_12_dip"
        android:layout_marginBottom="@dimen/ui_12_dip"
        >
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_golden"
            android:textSize="14sp"
            android:text="忘记交易密码"
            />
    </RelativeLayout>

</LinearLayout>