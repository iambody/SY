<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_10_dip">

        <ImageView
            android:id="@+id/dialog_merge_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/ui_20_dip"
            android:clickable="true"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号合并"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_sp_20" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_merge_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30_dip"
                android:layout_marginRight="@dimen/ui_30_dip"
                android:lineSpacingExtra="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_30_dip"
                android:layout_marginRight="@dimen/ui_30_dip"
                android:layout_marginTop="@dimen/ui_30_dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_merge_continue"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@drawable/select_btn_apphnormal"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/ui_10_dip"
                    android:text="继续使用"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <ImageView
                    android:layout_width="@dimen/ui_10_dip"
                    android:layout_height="@dimen/ui_20_dip"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/dialog_merge_merge"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/select_btn_apphnormal"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="@dimen/ui_10_dip"
                    android:text="我要合并"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>