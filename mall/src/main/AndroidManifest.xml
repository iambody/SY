<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qcloud.mall">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar">
        <activity
            android:name="app.mall.com.mvp.ui.MallAddressListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.mall.com.mvp.ui.MallEditAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.mall.com.mvp.ui.PayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.mall.com.mvp.ui.RechargeResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.mall.com.mvp.ui.PayMethodActivity"
            android:screenOrientation="portrait" />
        <!-- 微支付SDK界面 -->
        <!-- 显示网页界面 -->
        <activity
            android:name="com.iapppay.alpha.sdk.main.WebActivity"
            android:configChanges="screenSize|orientation|keyboard|navigation|layoutDirection"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- alipay sdk begin (新的支付宝) -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" />
        <!-- alipay sdk end -->
    </application>

</manifest>