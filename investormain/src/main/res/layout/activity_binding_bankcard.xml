                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/tv_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/tv_bankcard_number"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="银行卡号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <EditText
                    android:id="@+id/ev_bankcard_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/tv_bankcard_number"
                    android:background="@null"
                    android:digits="0123456789xyzXYZ"
                    android:hint="请输入您的储蓄卡号"
                    android:inputType="number"
                    android:maxLength="25"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_select_bankcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/tv_select_bankcard"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="银行名字"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/tv_pay_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/tv_select_bankcard"
                    android:hint="请选择银行"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_select_bankcard_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/tv_select_bankcard_city"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="支行地区"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />

                <TextView
                    android:id="@+id/actv_bank_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/tv_select_bankcard_city"
                    android:background="@null"
                    android:hint="请选择开户行地址"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_select_bankcard_branch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_70_dip"
                android:background="@color/white">

                <com.cgbsoft.lib.widget.AverageTextView
                    android:id="@+id/tv_select_bankcard_branch"
                    android:layout_width="@dimen/ui_64_dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:text="所属支行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_sp_16" />


                <TextView
                    android:id="@+id/tv_bank_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ui_30_dip"
                    android:layout_toRightOf="@+id/tv_select_bankcard_branch"
                    android:background="@null"
                    android:hint="请选择开户行地址"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:textSize="@dimen/dimens_sp_16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/ui_15_dip"
                    android:background="#E2E1E6" />
            </RelativeLayout>

