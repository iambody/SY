<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="17dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:passwordToggleDrawable="@drawable/edit_tob_cursor"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/mall_receiving_name"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:hint="@string/edit_recever_name"
                    android:singleLine="true"
                    android:textColor="#333"
                    android:textColorHint="#333"
                    android:textCursorDrawable="@drawable/edit_tob_cursor"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#d0d0d0" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp">
            <EditText
                android:id="@+id/mall_receiving_phone"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:gravity="center_vertical|left"
                android:hint="@string/edit_phone"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#333"
                android:textColorHint="#999"
                android:textCursorDrawable="@drawable/edit_tob_cursor"
                android:textSize="13sp" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#d0d0d0" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="55dp">

                <EditText
                    android:id="@+id/mall_receiving_address"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical|left"
                    android:hint="@string/edit_recever_address"
                    android:paddingBottom="5dp"
                    android:paddingTop="17dp"
                    android:textColor="#333"
                    android:textColorHint="#999"
                    android:textCursorDrawable="@drawable/edit_tob_cursor"
                    android:textSize="13sp" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mall_address_save_msg"
        style="@style/golden_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/mall_save_address" />
</LinearLayout>
