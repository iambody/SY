<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/Theme.AppCompat.DayNight.PopupOverlay">

                <TextView
                    android:id="@+id/title_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/fc_college_title_str"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimens_sp_18" />

                <TextView
                    android:id="@+id/title_right_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/dimens_sp_15"
                    android:visibility="gone"
                    android:text="OK"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


        <include
            layout="@layout/acitivity_divide_online"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_title" />


        <ListView
            android:id="@+id/group_chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#d0d0d0"
            android:dividerHeight="1dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/image_button_kong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_kong"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/image_button_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_jiazaizhong"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/image_button_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_chucuo"
        android:visibility="gone" />
</FrameLayout>