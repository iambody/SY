<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cgbsoft.privatefund.mvp.ui.home.CrenditralGuideActivity">

    <include
        android:id="@+id/title_bar_id"
        layout="@layout/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar_id"
        android:background="@color/app_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/crenditral_guide_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/guide20" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_60_dip"
        android:background="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/jump_crenditral_detial"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/app_golden"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_16" />
    </LinearLayout>

</RelativeLayout>
