<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="@drawable/image_bg">

        <ImageView
            android:id="@+id/item_fragment_videoschool_image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_fragment_videoschool_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="2"
            android:text="aadasdfasd"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_fragment_videoschool_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="aksnaksasnsannsnas"
                android:textColor="@color/color_a6a6a6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_fragment_videoschool_readnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/ui_10_dip"
                android:text="aksnaksasnsannsnas"
                android:textColor="@color/color_a6a6a6"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>