<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_transparent1">

    <LinearLayout
        android:id="@+id/dialog_sign_uplay"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/ui_40_dip"
        android:layout_marginRight="@dimen/ui_40_dip"
        android:background="@drawable/shape_sign_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/update_dialog_bg">
        </ImageView>

        <TextView
            android:id="@+id/tv_weichat_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="10dp"
            android:text="title"
            android:maxLines="2"
            android:textColor="#222"
            android:textSize="@dimen/dimens_sp_20" />
        <TextView
            android:id="@+id/tv_weichat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:layout_margin="15dp"
            android:textColor="#333"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dimens_sp_14" />



        <TextView
            android:id="@+id/btn_weichat_dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_dialog_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="чбошод"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_sp_17" />
    </LinearLayout>


    <ImageView
        android:id="@+id/dialog_sign_line"
        android:layout_width="@dimen/ui_2_dip"
        android:layout_height="@dimen/ui_40_dip"
        android:layout_below="@id/dialog_sign_uplay"
        android:layout_centerHorizontal="true"
        android:src="@color/white_light" />

    <ImageView
        android:id="@+id/iv_weichat_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_sign_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signdialog_up_cha_iv" />

</RelativeLayout>