<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_background"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/pdf_title_left"
        android:layout_width="@dimen/ui_40_dip"
        android:layout_height="@dimen/ui_40_dip"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_back_black_24dp"
        />

    <TextView
        android:id="@+id/pdf_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="10"
        android:paddingBottom="@dimen/ui_8_dip"
        android:paddingTop="@dimen/ui_8_dip"
        android:layout_gravity="center_horizontal"  />
    <ImageView
        android:id="@+id/pdf_title_right"
        android:layout_width="@dimen/ui_40_dip"
        android:layout_height="@dimen/ui_40_dip"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/product_plus" />
</LinearLayout>