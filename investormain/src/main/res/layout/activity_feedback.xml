<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_background"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_id"/>

    <LinearLayout
        android:layout_below="@+id/title_bar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="26dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/afb_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|top"
            android:hint="@string/feedback_hint"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:paddingTop="15dp"
            android:textColor="@color/color_6a6a6a"
            android:textColorHint="@color/color_6a6a6a"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_button_elegant"
        android:gravity="center"
        android:text="чбошод"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>