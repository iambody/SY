<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/pdf_title_left"
        android:layout_width="@dimen/ui_45_dip"
        android:layout_height="@dimen/ui_45_dip"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/ic_back_black_24dp"
        />

    <TextView
        android:id="@+id/pdf_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="10"
        android:layout_gravity="center_horizontal|center_vertical"  />

    <ImageView
        android:id="@+id/pdf_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/ui_5_dip"
        android:padding="@dimen/ui_5_dip"
        android:src="@drawable/product_plus"/>
</LinearLayout>