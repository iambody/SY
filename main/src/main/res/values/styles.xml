<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/BaseActionBar.MenuTextStyle</item>
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="BaseAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="BaseActionBar.MenuText1Style" parent="BaseActionBar.MenuTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseActionBar.MenuTextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomBarStyle">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_11</item>
        <item name="android:textColor">@color/ic_color_text_bottom_bar</item>
    </style>
</resources>
