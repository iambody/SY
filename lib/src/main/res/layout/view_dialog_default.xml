<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/default_dialog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_ios"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="22sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="28dp"
                />

            <TextView
                android:id="@+id/default_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:lineSpacingExtra="5sp"
                android:text="您确定要删除?"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#D1D1D1" />

        <LinearLayout
            android:id="@+id/dialog_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/default_dialog_quxiao"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/default_dialog_left_btn_select"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333" />

            <LinearLayout
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#D1D1D1" />

            <Button
                android:id="@+id/default_dialog_queren"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/ios_right_btn_select"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_single_layout"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/default_dialog_queren1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_single_btn_select"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>