<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/goto_has_video_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none" />

        <include layout="@layout/acitivity_divide_online" />

        <TextView
            android:id="@+id/goto_look_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/account_video_go_look_all"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_sp_14"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/goto_look_video"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ui_15_dip"
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:layout_marginRight="@dimen/ui_10_dip"
        android:background="@drawable/shape_btn_goden_boader_bg"
        android:gravity="center"
        android:text="@string/account_video_go_server"
        android:textColor="@color/app_golden"
        android:visibility="gone" />

</LinearLayout>
