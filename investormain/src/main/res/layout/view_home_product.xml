        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/ui_10_dip">

            <TextView
                android:id="@+id/home_product_frist_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="基准业绩"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_product_frist_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ui_5_dip"
                android:gravity="center"
                android:textColor="@color/app_golden"
                android:textSize="@dimen/dimens_sp_11"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/ui_1_dip"
            android:layout_height="@dimen/ui_26_dip"
            android:layout_gravity="center_vertical"
            android:src="#ffececec" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/ui_10_dip">

            <TextView
