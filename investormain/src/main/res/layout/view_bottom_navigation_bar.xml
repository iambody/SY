<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    tools:context="com.cgbsoft.privatefund.mvp.ui.home.MainPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <!--android:background="@drawable/ic_bg_bottom_navbar"-->

        <FrameLayout
            android:id="@+id/fl_bottom_nav_left_first"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_nav_left_first"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selector_bottom_mine" />

                <TextView
                    android:id="@+id/tv_bottom_nav_left_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vbnb_firsts_str"
                    android:textColor="@color/c_selector_text_bottom_bar"
                    android:textSize="@dimen/dimens_sp_11" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bottom_nav_msgnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_round_msg"
                android:padding="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_sp_8"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_bottom_nav_left_second"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_nav_left_second"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selector_bottom_investor_product" />

                <TextView
                    android:id="@+id/tv_bottom_nav_left_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vbnb_private_str"
                    android:textColor="@color/c_selector_text_bottom_bar"
                    android:textSize="@dimen/dimens_sp_11" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fl_bottom_nav_center"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_nav_center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selector_bottom_inverstor_discovery" />

                <TextView
                    android:id="@+id/tv_bottom_nav_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vbnb_happy_live_str"
                    android:textColor="@color/c_selector_text_bottom_bar"
                    android:textSize="@dimen/dimens_sp_11" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fl_bottom_nav_right_first"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_nav_right_first"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selector_bottom_inverstor_discovery" />

                <TextView
                    android:id="@+id/tv_bottom_nav_right_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vbnb_ever_ok_str"
                    android:textColor="@color/c_selector_text_bottom_bar"
                    android:textSize="@dimen/dimens_sp_11" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_bottom_nav_right_second"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_nav_right_second"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/selector_bottom_club" />

                <TextView
                    android:id="@+id/tv_bottom_nav_right_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/vbnb_mine_str"
                    android:textColor="@color/c_selector_text_bottom_bar"
                    android:textSize="@dimen/dimens_sp_11" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

