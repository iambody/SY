<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="17dp"
            android:background="#fff">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d0d0" />
            <EditText
                android:id="@+id/mall_receiving_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/edit_recever_name"
                android:textColorHint="#999"
                android:textColor="#333"
                android:singleLine="true"
                android:gravity="center_vertical|left"
                style="@style/edit_text_style"
                android:textCursorDrawable ="@drawable/edit_tob_cursor"
                android:textSize="13sp"
                android:background="#ffffff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d0d0" />

            <EditText
                android:id="@+id/mall_receiving_phone"
                android:layout_width="match_parent"
                android:hint="@string/edit_phone"
                android:textColorHint="#999"
                android:textColor="#333"
                android:textSize="13sp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="11"
                android:gravity="center_vertical|left"
                style="@style/edit_text_style"
                android:textCursorDrawable ="@drawable/edit_tob_cursor"
                android:background="#ffffff"
                android:layout_height="45dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d0d0" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    />
                <EditText
                    android:id="@+id/mall_receiving_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="17dp"
                    android:paddingBottom="5dp"
                    android:hint="@string/edit_recever_address"
                    android:textColorHint="#999"
                    android:textColor="#333"
                    android:textSize="13sp"
                    android:gravity="center_vertical|left"
                    style="@style/edit_text_style"
                    android:textCursorDrawable ="@drawable/edit_tob_cursor"
                    android:background="#ffffff"/>
            </FrameLayout>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/mall_address_save_msg"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            style="@style/red1_btn"
            android:text="@string/mall_save_address"
            />

    </LinearLayout>



</LinearLayout>
