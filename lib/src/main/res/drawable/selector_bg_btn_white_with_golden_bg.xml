<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_golden_click"/>
            <corners android:radius="4px"/>
            <stroke android:color="@color/app_golden_click" android:width="2px"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="4px"/>
            <solid android:color="@color/app_golden"/>
            <stroke android:color="@color/app_golden" android:width="2px"/>
        </shape>
    </item>
</selector>