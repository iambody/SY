                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:text="公募基金（公测）"
                android:textColor="@color/app_golden"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrorw_right_glod" />
        </LinearLayout>
        <!--公募开户 -->
        <LinearLayout
            android:id="@+id/view_public_fund_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_15_dip"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:background="@drawable/shape_home_public_fund"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/ui_10_dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/publish_regist_iv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ui_20_dip"
                android:text="@string/publish_regist"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_sp_20"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- 公募开户-->
        <include layout="@layout/view_home_publicfund"/>
        <!-- 公募基金的详情布局 -->
        <LinearLayout
            android:id="@+id/view_home_public_fund_detial_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:layout_marginRight="@dimen/ui_10_dip"
            android:background="@drawable/shape_home_public_fund"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/ui_10_dip">

                <TextView
                    android:id="@+id/view_home_public_fund_fundname"
                    style="@style/style_home_public_fund_fundname" />

                <TextView
                    android:id="@+id/view_home_public_fund_funddes"
                    style="@style/style_home_public_fund_funddes" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_z_dip"
                android:src="@color/public_fund_line" />
            <!-- 详情-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/style_home_public_fund_detail">
                    <!--左边的******** -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/view_home_public_fund_leftvalues"
                            style="@style/style_home_public_fund_up" />

                        <TextView
                            android:id="@+id/view_home_public_fund_leftdes"
                            style="@style/style_home_public_fund_down" />
                    </LinearLayout>
                    <!--左边的******** -->
                    <!--右边的******** -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/view_home_public_fund_rightvalues"
                            style="@style/style_home_public_fund_up"
                            android:layout_gravity="right" />

                        <TextView
                            android:id="@+id/view_home_public_fund_rightdes"
                            style="@style/style_home_public_fund_down"
                            android:layout_gravity="right" />
                    </LinearLayout>
                    <!--右边的******** -->
                </LinearLayout>

                <TextView
                    android:id="@+id/view_home_public_fund_shift"
                    style="@style/style_home_public_fund_shift"
                    android:text="@string/immediately" />

                <View style="@style/style_height_15" />
            </LinearLayout>


        </LinearLayout>

        <!-- 公募基金的详情布局************ -->
    </LinearLayout>
