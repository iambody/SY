<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pay_yundou_edit_bt"
            android:layout_width="@dimen/ui_30_dip"
            android:layout_height="@dimen/ui_30_dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:layout_marginRight="55dp"
            android:layout_marginTop="25dp"
            android:padding="4dp"
            android:src="@drawable/select_recharge_edit" />

        <EditText
            android:id="@+id/pay_yundou_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="6"
            android:text="500"
            android:textColor="@color/black"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pay_yundou_zengsong_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="云豆"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>